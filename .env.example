DATABASE_URL="file:./dev.db"
API_PORT=4000
NEXT_PUBLIC_API_BASE_URL="http://localhost:4000"

# Git Integration
# Comma-separated paths to scan for git repositories
# Example: GIT_SCAN_PATHS="/Users/username/Projects,/Users/username/Workspace"
GIT_SCAN_PATHS=""
GIT_SCAN_DEPTH=2

# Agent Configuration
# Path to Gemini CLI executable (default: 'gemini' if in PATH)
GEMINI_CLI_PATH="gemini"
# Root directory for agent workspace (must contain scanned repositories)
# Example: AGENT_WORKSPACE_ROOT="/Users/username/Workspace"
AGENT_WORKSPACE_ROOT=""
# Session idle timeout in minutes (default: 30)
AGENT_SESSION_IDLE_TIMEOUT=30
# Maximum concurrent agent sessions (default: 5)
AGENT_MAX_CONCURRENT_SESSIONS=5

# Agent Testing Tools (Development Only)
# Enable test mode for simulating errors and delays
AGENT_TEST_MODE=false
# Error type: none | 429 | 500 | network
AGENT_TEST_ERROR=none
# Delay in milliseconds (0-10000)
AGENT_TEST_DELAY=0
# Success rate percentage (0-100)
AGENT_TEST_SUCCESS_RATE=100
